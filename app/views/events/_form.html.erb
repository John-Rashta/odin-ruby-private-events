<%= form_with model: @event do |form| %>
    <div>
        <%= form.label :location %>
        <%= form.text_field :location %>
    </div>
    <div>
        <%= form.label :event_date %>
        <%= form.date_field :event_date %>
    </div>
    <div>
        <%= form.label :visibility %>
        <%= form.select :visibility, [["Private", 0], ["Public", 1]] %>
    </div>
    <%= form.submit %>
<% end %>
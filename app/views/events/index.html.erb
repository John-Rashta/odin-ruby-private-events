<% if !user_signed_in? %>
    <%= button_to "Log In", new_user_session_path, method: "get" %>
    <%= button_to "Sign Up", new_user_registration_path, method: "get" %>
<% end %>

<% if user_signed_in? %>
    <%= button_to "Create Event", new_event_path, method: "get"  %>
<% end %>
<h2>All Events</h2>
<% @events.each do |event| %>
    <div>
        <% if user_signed_in? && current_user.id != event.creator.id && !event.attendee_ids.include?(current_user.id) %>
            <%= button_to "Join Event", event_attendee_index_path , method: "post", params: {event: event.id}  %>
        <% end %>
        <h4><%= event.location %></h4>
        <div><%= event.event_date %></div>
    </div>
<% end %>